{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceRoot}",
            "executable": "./build/examples/azure_mqtt_demo.elf",
            "name": "Debug with OpenOCD",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "interface/picoprobe.cfg",
                "target/rp2040.cfg"
            ],
            // e.g. "C:/Program Files (x86)/GNU Arm Embedded Toolchain/10 2020-q4-major/bin"
            "armToolchainPath": "[toolchain_path]", // input toolchain path
            // e.g. "D:/RP2040/WizFi360-EVB-Pico-AZURE-C/tools/openocd-picoprobe-0.10.0/openocd.exe"
            "serverpath": "[openocd_executable_file_path]", // input OpenOCD executable file path
            "searchDir": [
                // e.g. "D:/RP2040/WizFi360-EVB-Pico-AZURE-C/tools/openocd-picoprobe-0.10.0/scripts" 
                "[openocd_script_path]" // input OpenOCD script path
            ],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "postRestartCommands": [
                "break main",
                "continue"
            ]
        }
    ]
}
